@model SistemaGestionOfertas.Models.DTO.JobOfferDto

@{
    ViewData["Title"] = "Edit";
}

@if (ViewData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewData["ErrorMessage"]
    </div>
}

<h2>Editar Oferta</h2>
<br>
<div class="row">
    <form asp-action="Edit" method="post">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Title" class="control-label"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Address" class="control-label"></label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="IdCity" class="control-label">Ciudad</label>
            <select asp-for="IdCity" asp-items="ViewBag.Cities" class="form-control"></select>
            <span asp-validation-for="IdCity" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="IdSalary" class="control-label">Rango Salarial</label>
            <select asp-for="IdSalary" asp-items="ViewBag.Salaries" class="form-control"></select>
            <span asp-validation-for="IdSalary" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="HideSalary" class="control-label">¿Ocultar salario?</label>
            <input asp-for="HideSalary" class="form-check-input" type="checkbox" />
        </div>

        <div class="form-group">
            <label asp-for="IdContractType" class="control-label">Tipo de Contrato</label>
            <select asp-for="IdContractType" asp-items="ViewBag.ContractTypes" class="form-control"></select>
            <span asp-validation-for="IdContractType" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="IdExpirationTime" class="control-label">Duración de Publicación</label>
            <select asp-for="IdExpirationTime" asp-items="ViewBag.ExpirationTimes" class="form-control"></select>
            <span asp-validation-for="IdExpirationTime" class="text-danger"></span>
        </div>

        <input type="hidden" asp-for="IdUserWhoRegisteredIt" />

        <button type="submit" class="btn btn-primary">Guardar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
